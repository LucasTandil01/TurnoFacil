package tp2;

public class Temporada {
	
	private Episodio[] episodios;

	
	public double promedioCalificaciones() {
		double suma = 0;
		for(Episodio ep:episodios) {
			if(ep.isVisto()) {
				suma+=ep.getCalificacion();
			}
		}
//		se puede hacer otro contador para los ep vistos y no tener q llamar al otro m√©todo
		return suma/episodiosVistos();
	}
	
	public int episodiosVistos() {
		int vistos = 0;
		for(Episodio ep:episodios) {
			if(ep.isVisto()) {
				vistos++;
			}
		}
		return vistos;
	}
	
	public Episodio[] getEpisodios() {
		return episodios;
	}

	public void setEpisodios(Episodio[] episodios) {
		this.episodios = episodios;
	}
}
