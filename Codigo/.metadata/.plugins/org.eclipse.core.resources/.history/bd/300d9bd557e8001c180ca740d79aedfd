package Parcial5112021;

import java.util.ArrayList;
import java.util.Collections;

public class Concesionaria {
	private ArrayList<Elemento> elementos;
	
	public static void main(String[] args) {
		
	}
	
	public ArrayList<Elemento> buscar(Filtro f){
		ArrayList<Elemento> salida = new ArrayList<Elemento>();
		for(Elemento e: elementos) {
			salida.addAll(e.buscar(f));
		}
		Collections.sort(salida);
		return salida;
	}
	
	public void agregarElementos() {
		Vehiculo v1 = new Vehiculo("Toyota",200,2010);
		Vehiculo v2 = new Vehiculo("Peugeot",100,2015);
		Vehiculo v3 = new Vehiculo("Chevrolet",300,2020);
		
		Lote l1 = new Lote("Lote 1");
		Lote l2 = new Lote("Lote 2");
		
		l1.addElemento(v1);
		l1.addElemento(v3);
		l2.addElemento(v2);
		l2.addElemento(l1);
	}
}
